<%- include('template/header') -%>
    <form method="post" action="/productos/" enctype="multipart/form-data">

        <div class="contenedor-form">
            <h1>Formulario de registro de productos</h1>
            <form method="post" action="/productos/" enctype="multipart/form-data">
                <label for="producto">  Producto</label>
                <input type="text" name="nombre" placeholder="nombre del producto" required max="5">
                <label for="producto">Categoria:</label>
                <input type="text" name="descrippcion" placeholder="Ejemplo:linea blanca" required>
                <label for="producto">Precio</label>
                <input type="text" name="precio" placeholder="1200" required pattern="[0-9]*">
                <input type="file" name="imagen" id="file">
                <div id="preview"></div>

                <input type="submit" value="Enviar datos">
            </form>


        </div>

        <script>
            document.getElementById("file").onchange = function(e) {
                // Creamos el objeto de la clase FileReader
                let reader = new FileReader();

                // Leemos el archivo subido y se lo pasamos a nuestro fileReader
                reader.readAsDataURL(e.target.files[0]);

                // Le decimos que cuando este listo ejecute el c√≥digo interno
                reader.onload = function() {
                    let preview = document.getElementById('preview'),
                        image = document.createElement('img');
                    image.style.width = "300px";

                    image.src = reader.result;

                    preview.innerHTML = '';
                    preview.append(image);
                };
            }
        </script>
